# Whoop OAuth Configuration
# Register your app at https://developer.whoop.com
WHOOP_CLIENT_ID=your_whoop_client_id_here
WHOOP_CLIENT_SECRET=your_whoop_client_secret_here
WHOOP_REDIRECT_URI=http://localhost:3000/api/auth/whoop/callback
WHOOP_API_BASE=https://api.prod.whoop.com/developer

# Webhook verification secret (set this in Whoop developer dashboard)
WHOOP_WEBHOOK_SECRET=your_webhook_secret_for_verification

# Token encryption key - CRITICAL: Generate with: openssl rand -hex 32
# This encrypts OAuth tokens at rest in the database
TOKEN_ENCRYPTION_KEY=change_this_to_32_byte_hex_string

# Supabase Configuration
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Cron job authentication
# Generate with: openssl rand -hex 16
CRON_SECRET=your_random_cron_secret_here

# Optional: App URL for OAuth redirects in production
NEXT_PUBLIC_APP_URL=http://localhost:3000
